.PHONY:	
.DEFAULT_GOAL :=
.SILENT:

# ! --------------------------------------------------------------------------------------------------------------------------------
# ! COLORS

GREEN = \033[32m
YELLOW = \033[33m
PURPLE = \033[35m
RED = \033[31m
WHITE = \033[37m
FCOLOR = \033[0m

# ! --------------------------------------------------------------------------------------------------------------------------------
# ! PATH

SRCS_PATH = 
OBJS_PATH = 
INCS_PATH = 
UTILS_PATH = 

# ! --------------------------------------------------------------------------------------------------------------------------------
# ! COMMANDS AND FLAGS

MKDIR := mkdir -p
CC = cc
RM := rm -rf
SLEEP = sleep 0.1
CFLAGS = -Wall -Wextra -Werror
OPTFLAGS = -Ofast -flto
DEBUGFLAGS = -g3 -fsanitize=address
# ! --------------------------------------------------------------------------------------------------------------------------------
# ! FILES

SRCS = 

OBJS = $(patsubst %, $(OBJS_PATH)/%, $(notdir $(SRCS:.c=.o)))

# ! --------------------------------------------------------------------------------------------------------------------------------
# ! RULES

all: 

$(OBJS_PATH)/%.o: $(SRCS_PATH)/%.c
	
$(NAME):

clean:

fclean: clean

re: fclean all

